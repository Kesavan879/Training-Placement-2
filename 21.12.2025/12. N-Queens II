class Solution {
    public int totalNQueens(int n) {
        char [][] board = new char [n][n];
        for(int i=0;i<n;i++){
            Arrays.fill(board[i],'.');
        }
        return getTotalQueens(board,0,n);
    }

    public int getTotalQueens(char [][] board,int row,int n){
        if(row == n){
            return 1;
        }
        int cnt = 0;
        for(int i=0;i<n;i++){
            if(isSafe(board,row,i,n)){
                board[row][i]='Q';
                cnt+=getTotalQueens(board,row+1,n);
                board[row][i]='.';
            }
        }
        return cnt;

    }

    public boolean isSafe(char [][]board,int row,int col,int n){

        // horizontally 
        for(int i=col;i>=0;i--){
            if(board[row][i]=='Q'){
                return false;
            }
        }

        // vertically 
        for(int i=row;i>=0;i--){
            if(board[i][col]=='Q'){
                return false;
            }
        }

        // right diagonal
        for(int i=row,j=col;i>=0 && j<n ; i--,j++){
            if(board[i][j]=='Q'){
                return false;
            }
        }

        // left diagonal 
        for(int i=row,j=col;i>=0 && j>=0 ; i--,j--){
            if(board[i][j]=='Q'){
                return false;
            }
        }
        return true;

    }

}
