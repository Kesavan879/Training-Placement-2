class Solution {
    public int firstMissingPositive(int[] nums) {
        Arrays.sort(nums);
        int count = 1;

        for(int i = 0; i < nums.length; i++){
            if(nums[i] <= 0)
                continue;
            else{
                if(count == nums[i])
                    count++;
                else if(count > nums[i])
                    continue;
                else
                    break;
            }
        }

        return count;
    }
}
