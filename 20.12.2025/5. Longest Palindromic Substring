class Solution {
    public String longestPalindrome(String s) {


        if(s.length()<=1){

            return s;
        }

         String result = "";
        for (int i = 1; i < s.length(); i++) {


            int l = i;
            int r = i;


            // Odd length

            while (l >= 0 && r < s.length() && s.charAt(l) == s.charAt(r)) {


                String temp = s.substring(l, r + 1);

                if (temp.length() > result.length()) {

                    result = temp;
                }
                l--;
                r++;
            }
            // Even length
            l = i - 1;
            r = i;

            while (l >= 0 && r < s.length() && s.charAt(l) == s.charAt(r)) {

                String temp = s.substring(l, r + 1);
                if (temp.length() > result.length()) {
                    result = temp;
                }
                l--;
                r++;
            }


        }
        return result;
        
    }
}
