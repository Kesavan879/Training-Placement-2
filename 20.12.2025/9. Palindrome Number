class Solution {
    public boolean isPalindrome(int x) {

    if (x < 0){
      return false;
    }

    int xbackup = x;

    if (x < 10){
      return true;
    }

    int temp = 0;

    while (x > 9){
      int r = x % 10;
      temp = temp * 10 + r;
      x = x/10;
    }
    
    temp = temp *10 + x;
    
    return temp == xbackup;
    }
}
