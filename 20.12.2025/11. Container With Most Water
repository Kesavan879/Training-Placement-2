class Solution {
    public int maxArea(int[] height) {
        // Initialize two pointers - one at each end of array
        int left = 0;
        int right = height.length - 1;
        int maxWater = 0;

        // Loop condition: move pointers inward toward each other
        //     until they meet
        while (left < right) {
            // Calculate amount of water contained within current heights
            int currHeight = Math.min(height[left], height[right]);
            int currWidth = right - left;
            int currWater = currHeight * currWidth;

            maxWater = Math.max(maxWater, currWater);

            // Increment pointers
            // Must move pointer indexing smaller height
            // This is only way to potentially increase water
            if (height[left] > height[right]) {
                right--;
            } else {
                left++;
            }
        }

        return maxWater;
    }
}
