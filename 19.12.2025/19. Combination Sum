class Solution {
    public List<List<Integer>> combinationSum(int[] candidates, int target) {
        List<List<Integer>> result = new ArrayList<>();
        combinations(0,candidates,target,new ArrayList<>(),result);
        return result;
    }
    public void combinations(int index, int[] nums, int target,List<Integer> current,List<List<Integer>> result) {
        if (target==0) {
            result.add(new ArrayList<>(current));
            return;
        }
        if (index==nums.length || target<0) return;
        current.add(nums[index]);
        combinations(index, nums, target-nums[index], current,result);
        current.remove(current.size()-1);
        combinations(index+1,nums,target,current,result);
    }
}
