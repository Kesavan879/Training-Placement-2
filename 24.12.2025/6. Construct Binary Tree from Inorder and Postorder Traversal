/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    int index;
    HashMap<Integer, Integer> map;

    public TreeNode buildTree(int[] inorder, int[] postorder) {
        index = postorder.length - 1;
        map = new HashMap<>();

        for (int i = 0; i < inorder.length; i++) {
            map.put(inorder[i], i);
        }

        return buidT(inorder, postorder, 0, inorder.length - 1);

    }

    public TreeNode buidT(int[] inorder, int[] postorder, int left, int right) {

        if (left > right) {
            return null;
        }
        TreeNode root = new TreeNode(postorder[index]);
        int mid = map.get(postorder[index]);
        index--;
        root.right = buidT(inorder, postorder, mid + 1, right);
        root.left = buidT(inorder, postorder, left, mid - 1);
        

        return root;

    }
}
