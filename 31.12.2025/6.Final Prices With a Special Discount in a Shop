class Solution(object):
    def finalPrices(self, prices):
        stack = []
        
        for i, current in enumerate(prices):
            # While the stack is not empty and the current price is a valid 
            # discount for the item at the top of the stack
            while stack and prices[stack[-1]] >= current:
                waiting_index = stack.pop()
                # Apply the discount
                prices[waiting_index] -= current
            
            stack.append(i)
            
        return prices
