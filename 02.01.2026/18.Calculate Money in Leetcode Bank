class Solution(object):
    def totalMoney(self, n):
        ini=1
        res=0
        ans=0
        count=0
        for i in range(1,n+1):
            if(count==7):  
                ini+=1              
                res=ini
                count=1
            else:
                count+=1
                res=res+1
            ans+=res
        return ans
