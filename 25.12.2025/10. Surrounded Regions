class Solution {

    int n, m;

    public void solve(char[][] board) {
        n = board.length;
        m = board[0].length;

        // 1️⃣ DFS from BORDER O's
        for (int i = 0; i < n; i++) {
            if (board[i][0] == 'O') dfs(board, i, 0);
            if (board[i][m - 1] == 'O') dfs(board, i, m - 1);
        }

        for (int j = 0; j < m; j++) {
            if (board[0][j] == 'O') dfs(board, 0, j);
            if (board[n - 1][j] == 'O') dfs(board, n - 1, j);
        }

        // 2️⃣ Flip remaining O's, restore safe ones
        for (int i = 0; i < n; i++) {
            for (int j = 0; j < m; j++) {
                if (board[i][j] == 'O') board[i][j] = 'X';   // surrounded
                else if (board[i][j] == '#') board[i][j] = 'O'; // safe
            }
        }
    }

    // DFS to mark SAFE O's
    void dfs(char[][] board, int i, int j) {

        // base conditions
        if (i < 0 || j < 0 || i >= n || j >= m || board[i][j] != 'O')
            return;

        // mark as safe
        board[i][j] = '#';

        // go in 4 directions
        dfs(board, i + 1, j);
        dfs(board, i - 1, j);
        dfs(board, i, j + 1);
        dfs(board, i, j - 1);
    }
}
