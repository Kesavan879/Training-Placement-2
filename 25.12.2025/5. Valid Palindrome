class Solution {
    public boolean isPalindrome(String s) {
        if(s == "") return true;
        int ptr1, ptr2;
        s = s.replaceAll("[^a-zA-Z0-9]", "").trim().toLowerCase();
        for(int i = 0; i < (s.length()) / 2; i++){
            ptr1 = s.charAt(i);
            ptr2 = s.charAt(s.length() - i - 1);
            if(ptr1 != ptr2) return false;
        }
        return true;
    }
}
