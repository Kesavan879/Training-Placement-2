/*
// Definition for a Node.
class Node {
    int val;
    Node next;
    Node random;

    public Node(int val) {
        this.val = val;
        this.next = null;
        this.random = null;
    }
}
*/

class Solution {
    public Node copyRandomList(Node head) {
        if(head == null) return head;
        Map<Node, Node> map = new HashMap<>();
        Node parser = head;
        while(parser != null){
            Node newNode = new Node(parser.val);
            map.put(parser,newNode);
            parser = parser.next;
        }

        parser = head;

        while(parser != null){
            Node newNode   = map.get(parser);
            newNode.random = map.get(parser.random);
            newNode.next   = map.get(parser.next);
            parser = parser.next;
        }

        return map.get(head);
    }
}
