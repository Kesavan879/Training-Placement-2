class Solution {
    public int maxProfit(int[] prices) {
        
        int profit = 0;
        for(int i = 0; i < prices.length - 1; i++){
            int buy = prices[i];
            int sell = prices[i + 1];
            int currentProfit = sell - buy;
            if(currentProfit > 0){
                profit += currentProfit;
            }
        }
        return profit;
    }
}
