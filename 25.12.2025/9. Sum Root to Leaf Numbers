class Solution {
    public int sumNumbers(TreeNode root) {
        return dfs(root, 0);
    }
    private int dfs(TreeNode node, int currentSum) {
        // Base case: Null node doesn't contribute to the sum
        if (node == null) {
            return 0;
        }
        // Calculate the number form by this path so far
        currentSum = currentSum * 10 + node.val;
        // If we reach a leaf node, return the path number
        if (node.left == null && node.right == null) {
            return currentSum;
        }
        // Recursively find the sum of paths in the left and right subtrees
        return dfs(node.left, currentSum) + dfs(node.right, currentSum);
    }
}
