class Solution {
    public int maxProfit(int[] prices) {
        int maxprofit = 0;
        int i=0, j=0;
        while(j<prices.length)
        {
            if(prices[i] < prices[j])
            {
                int profit = prices[j] - prices[i];
                maxprofit = Math.max(maxprofit, profit);
            }
            else
            {
                i=j;
            }
            j++;
        }
        
        return maxprofit;
    }
}
