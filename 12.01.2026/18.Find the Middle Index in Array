class Solution(object):
    def findMiddleIndex(self, nums):
        prefix = [nums[0]]

        for i in range(1 , len(nums)):
            prefix.append(prefix[-1] + nums[i])

        for i in range(len(prefix)):
            if i > 0:
                left_sum = prefix[i - 1]
            else:
                left_sum = 0

            right_sum = prefix[-1] - prefix[i]

            if left_sum == right_sum:
                return i

        return -1
        
