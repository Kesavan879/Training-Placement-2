class Solution {
    public int[][] largestLocal(int[][] grid) {
        int n = grid.length;
        int[][] matrix = new int[n - 2][n - 2]; // <- Generate an integer matrix maxLocal of size (n - 2) x (n - 2)
        
        for (int i = 0; i < n - 2; i++) {
            for (int j = 0; j < n - 2; j++) {
                int max_val = 0;

                // start with i and j, not 0!!!! (We continue and don't start from 0.)
                for (int ki = i; ki < i + 3; ki++) {
                    for (int kj = j; kj < j + 3; kj++) {
                        if (grid[ki][kj] > max_val) {
                            max_val = grid[ki][kj]; // max
                        }
                    }
                }

                matrix[i][j] = max_val; // assign a value
            }
        }

        return matrix;
    }
}
