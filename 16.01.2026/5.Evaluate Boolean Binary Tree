/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */

class Solution 
{
    public boolean evaluateTree(TreeNode root) 
    {
        return operation(root) == 1 ? true : false; 
    }
    public int operation(TreeNode root)
    {
        if(root.left == null && root.right == null) return root.val;

        int left = operation(root.left);
        int right = operation(root.right);

        if(root.val == 2 && (left == 0 && right == 0)) return 0;
        if(root.val == 3 && (left == 0 || right == 0)) return 0;
        return 1;
    }
}
