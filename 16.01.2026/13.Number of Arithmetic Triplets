class Solution {
    public int arithmeticTriplets(int[] nums, int diff) {
        int n = nums.length;
        int count = 0 ;
        for(int i = 0 ; i < n ; i++){
            int idx = check(nums,i,diff);//Index of ele+diff
            if(idx != -1){
                if(check(nums , idx , diff) != -1)count++;
            }
        }
        return count;
    }
    public int check(int[] arr ,int ele , int diff){
        if(ele == arr.length-1)return -1;//To indicate that element not present
        for(int i = ele+1 ; i < arr.length ; i++){
            if(arr[i] == arr[ele]+diff)return i;
        }
        return -1;
    }
}
