class Solution {
    public int minNumberOfHours(int initialEnergy, int initialExperience, int[] energy, int[] experience) {
        int n = energy.length;
        int totalEnergy = 0;
        for (int e : energy) {
            totalEnergy += e;
        }

        // Energy training needed
        int trainingHours = 0;
        if (initialEnergy <= totalEnergy) {
            trainingHours += (totalEnergy + 1 - initialEnergy);
        }

        // Experience training needed
        int currentExperience = initialExperience;
        for (int i = 0; i < n; i++) {
            if (currentExperience <= experience[i]) {
                int extra = experience[i] + 1 - currentExperience;
                trainingHours += extra;
                currentExperience += extra;
            }
            currentExperience += experience[i];
        }

        return trainingHours;


    }
}
